#include <iostream>
using namespace std;

int main() {
    
    int row1, col1;
    cout << "Enter number of rows for matrix : ";
    cin >> row1;
	 
    cout << "Enter number of columns for matrix : ";
    cin >> col1;

    // Create 2D dynamic array
    int **arr1 = new int*[row1];
    for (int i = 0; i < row1; i++) {
        arr1[i] = new int[col1];
    }

    cout << "Enter " << (row1 * col1) << " elements of matrix :\n";
    for (int i = 0; i < row1; i++) {
        for (int j = 0; j < col1; j++) {
            cin >> arr1[i][j];
        }
    }
    
    cout << "\nMatrix is:\n";
    for (int i = 0; i < row1; i++) {
        for (int j = 0; j < col1; j++) {
            cout << arr1[i][j] << " ";
        }
        cout << "\n";
    }


    // ------------ UPDATE MATRIX ELEMENT ------------
    int r, c, value;
    cout << "\nEnter row index to update (0 - " <<row1-1<< "): ";
    cin >> r;
    cout << "Enter column index to update (0 - " <<col1-1<< "): ";
    cin >> c;

    if (r >= 0 && r < row1 && c >= 0 && c < col1) {
        cout << "Enter new value: ";
        cin >> value;

        arr1[r][c] = value;
        cout << "\nValue updated successfully!\n";
    } else {
        cout << "\nInvalid position! Update cancelled.\n";
    }
    // ------------------------------------------------

    cout << "\nUpdated Matrix is:\n";
    for (int i = 0; i < row1; i++) {
        for (int j = 0; j < col1; j++) {
            cout << arr1[i][j] << " ";
        }
        cout << "\n";
    }

    // Free memory
    for (int i = 0; i < row1; i++) {
        delete[] arr1[i];
    }
    delete[] arr1;

    return 0;
}

//Output
Enter number of rows for matrix : 3
Enter number of columns for matrix : 3
Enter 9 elements of matrix :
1
3
7
9
2
4
6
8
5

Matrix is:
1 3 7 
9 2 4 
6 8 5 

Enter row index to update (0 - 2): 1 2
Enter column index to update (0 - 2): Enter new value: 10

Value updated successfully!

Updated Matrix is:
1 3 7 
9 2 10 
6 8 5 
