#include <iostream>
using namespace std;

int main() {
    
    int num, num1, value=0;
        
    cout << "Enter the value of num : ";
    cin >> num;
    
    num1 = num;
    
    while(num > 0) {
		int rem = num % 10;
		value = value *10 + rem;
		num /= 10;
	}
	
	if(num1 == value){
	cout << value <<  " is a palindrome";    
	}else{
	    cout << num1 << " is NOT a palindrome";
	}

    return 0;
}

//Output
Enter the value of num : 1221
1221 is a palindrome
