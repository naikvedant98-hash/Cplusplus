#include <iostream>
using namespace std;

// ======================= Base Class =======================
class Account {
protected:
    int accNo;
    string name;
    double balance;

public:
    void createAccount() {
        cout << "\nEnter Account Number: ";
        cin >> accNo;
        cout << "Enter Account Holder Name: ";
        cin >> name;
        cout << "Enter Initial Balance: ";
        cin >> balance;
    }

    void deposit(double amount) {
        balance += amount;
        cout << "Deposited Amount: " << amount << endl;
    }

    void display() {
        cout << "\nAccount Number: " << accNo;
        cout << "\nAccount Holder: " << name;
        cout << "\nBalance: " << balance << endl;
    }
};

// ======================= Savings Account =======================
class SavingsAccount : public Account {
private:
    double interestRate;

public:
    void setInterestRate() {
        cout << "Enter Interest Rate (%): ";
        cin >> interestRate;
    }

    void calculateInterest() {
        double interest = (balance * interestRate) / 100;
        cout << "Savings Account Interest: " << interest << endl;
    }
};

// ======================= Current Account =======================
class CurrentAccount : public Account {
private:
    const double minBalance = 1000;
    const double serviceCharge = 200;

public:
    void checkMinimumBalance() {
        if (balance < minBalance) {
            cout << "Minimum balance not maintained!" << endl;
            balance -= serviceCharge;
            cout << "Service Charge Applied: " << serviceCharge << endl;
        } else {
            cout << "Minimum balance maintained." << endl;
        }
    }
};

// ======================= Fixed Deposit Account =======================
class FixedDepositAccount : public Account {
private:
    int lockInPeriod;   // in years
    double fdRate;      // higher interest rate

public:
    void setFDDetails() {
        cout << "Enter Lock-in Period (years): ";
        cin >> lockInPeriod;
        cout << "Enter FD Interest Rate (%): ";
        cin >> fdRate;
    }

    void calculateFDInterest() {
        double interest = (balance * fdRate * lockInPeriod) / 100;
        cout << "Fixed Deposit Interest: " << interest << endl;
    }
};

// ======================= Main Function =======================
int main() {

    cout << "===== SAVINGS ACCOUNT =====";
    SavingsAccount sa;
    sa.createAccount();
    sa.setInterestRate();
    sa.deposit(3000);
    sa.display();
    sa.calculateInterest();

    cout << "\n===== CURRENT ACCOUNT =====";
    CurrentAccount ca;
    ca.createAccount();
    ca.display();
    ca.checkMinimumBalance();

    cout << "\n===== FIXED DEPOSIT ACCOUNT =====";
    FixedDepositAccount fd;
    fd.createAccount();
    fd.setFDDetails();
    fd.display();
    fd.calculateFDInterest();

    return 0;
}

